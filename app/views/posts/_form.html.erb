<%= simple_form_for(@post) do |f| %>
  <%= f.error_notification %>

  <div class="form-inputs">
    <%= f.input :title %>
    <%= f.input :body %>
    <%= f.association :user %>
    <%= f.input :updated_on %>
    <%= f.input :created_on %>
    <%= f.input :published %>
    <%= f.input :publishable %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
