<%= form_for @album, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :updated_on, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :updated_on, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :created_on, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :created_on, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  albums_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
