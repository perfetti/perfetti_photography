<%- model_class = Photograph -%>
<div class="page-header">
  <h1><%=t '.title', :default => Photograph %></h1>
</div>
<table class="table table-striped">
  <thead>
    <tr>
      <th>ID</th>
      <th><%= model_class.human_attribute_name(:title) %></th>
      <th><%= model_class.human_attribute_name(:description) %></th>
      <th><%= model_class.human_attribute_name(:asset_url) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%= model_class.human_attribute_name(:updated_on) %></th>
      <th><%= model_class.human_attribute_name(:created_at) %></th>
      <th><%=t '.actions', :default => t("helpers.actions") %></th>
    </tr>
  </thead>
  <tbody>
    <% @photographs.each do |photograph| %>
      <tr>
        <td><%= photograph.id %></td>
        <td><%= photograph.title %></td>
        <td><%= photograph.description %></td>
        <td><%= photograph.asset_url %></td>
        <td><%= photograph.created_at %></td>
        <td><%= photograph.updated_on %></td>
        <td><%=l photograph.created_at, format: :long %></td>
        <td>
          <%= link_to photograph_path(photograph), :class => 'btn btn-xs', :title => "#{ t('.show', :default => t('helpers.links.show')) }" do %>
            <%= glyph 'info-sign' %>
            <%= glyph 'pencil' %>
          <%- end -%>
          <%= link_to photograph_path(photograph), :method => :delete, :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) }, :class => 'btn btn-xs', :title => "#{ t('.destroy', :default => t('helpers.links.destroy')) }" do %>
            <%= glyph 'remove' %>
          <%- end -%>
        </td>
      </tr>
    <% end %>
  </tbody>
</table>

<%= link_to t('.new', :default => t("helpers.links.new")),
            new_photograph_path,
            :class => 'btn btn-primary' %>
