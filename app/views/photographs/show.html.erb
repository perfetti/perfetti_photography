<%- model_class = Photograph -%>
<div class="page-header">
  <h1><%=t '.title', :default => Photograph %></h1>
</div>

<div class="fieldset">
  <dl>
      <dt class="label label-default"><%= model_class.human_attribute_name(:title) %></dt>
      <dd><pre class="prettyprint"><%= @photograph.title %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:description) %></dt>
      <dd><pre class="prettyprint"><%= @photograph.description %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:asset_url) %></dt>
      <dd><pre class="prettyprint"><%= @photograph.asset_url %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:created_at) %></dt>
      <dd><pre class="prettyprint"><%= @photograph.created_at %></pre></dd>
      <dt class="label label-default"><%= model_class.human_attribute_name(:updated_on) %></dt>
      <dd><pre class="prettyprint"><%= @photograph.updated_on %></pre></dd>
  </dl>
</div>

<div class="form-group">
  <%= link_to t('.back', :default => t("helpers.links.back")),
              photographs_path, :class => 'btn btn-default'  %>
  <%= link_to t('.edit', :default => t("helpers.links.edit")),
              edit_photograph_path(@photograph), :class => 'btn btn-default' %>
  <%= link_to t('.destroy', :default => t("helpers.links.destroy")),
              photograph_path(@photograph),
              :method => 'delete',
              :data => { :confirm => t('.confirm', :default => t("helpers.links.confirm", :default => 'Are you sure?')) },
              :class => 'btn btn-danger' %>
</div>

