<%= form_for @photograph, :html => { :class => 'form-horizontal form-model' } do |f| %>
  <div class="form-group">
    <%= f.label :title, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :title, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :description, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_area :description, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :asset_url, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.text_field :asset_url, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :created_at, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :created_at, :class => 'text-field form-control' %>
    </div>
  </div>
  <div class="form-group">
    <%= f.label :updated_on, :class => 'control-label col-md-2' %>
    <div class="col-md-10">
      <%= f.datetime_select :updated_on, :class => 'text-field form-control' %>
    </div>
  </div>

  <div class="form-group">
    <div class='col-md-offset-2 col-md-10'>
      <%= f.submit nil, :class => 'btn btn-primary' %>
      <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                  photographs_path, :class => 'btn btn-default' %>
    </div>
  </div>
<% end %>
